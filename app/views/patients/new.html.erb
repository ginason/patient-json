<div class="container">
<h3>New Patient</h3>
<form>
  <label class="col-form-label" for="formGroupExampleInput">Name</label>
  <div class="form-row">
    <div class="col-3">
      <input type="text" class="form-control" placeholder="First name">
    </div>
    <div class="col-3">
      <input type="text" class="form-control" placeholder="Last name">
    </div>
  </div>
  <div class="form-group">
  <label class="col-form-label" for="formGroupExampleInput">Organization name</label>
  <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Organization name">
</div>
<div class="form-group">
  <label class="col-form-label" for="formGroupExampleInput2">Gender</label><br>
  <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
</div>
<div class="form-group">
<label class="col-form-label" for="formGroupExampleInput">Condition of Patient</label>
<input type="text" class="form-control" id="formGroupExampleInput" placeholder="Condition">
</div>
<div class="form-group">
  <div class="col-sm-10">
    <button type="submit" class="btn btn-primary">Register</button>
  </div>
</div>
</form>
</div>
